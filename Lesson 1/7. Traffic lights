import utime
import machine

led_red = machine.Pin(15, machine.Pin.OUT)
led_yellow = machine.Pin(14, machine.Pin.OUT)
led_green = machine.Pin(13, machine.Pin.OUT)
button = machine.Pin(16, machine.Pin.IN, machine.pin.PULL_DOWN) #Pull down = pressing gives 1
buzzer = machine.Pin(12, machine.Pin.OUT)

while True:
  #Button is pressed
  if button.value() == 1:
    led_red.value(1)
    for i in range(10):
      buzzer.value(1)
      utime.sleep(0.2)
      buzzer.value(0)
      utime.sleep(0.2)
    led_red.value(0)


#traffic light sequence
while True:
  led_red.value(1)
  utime.sleep(2)
  led_red.value(0)
  led_yellow.value(1)
  utime.sleep(2)
  led_red.value(0)
  led_yellow.value(0)
  led_green.value(1)
  utime.sleep(5)
  led_green.value(0)
  led_yellow.value(1)
  utime.sleep(2)
  led_yellow.value(0)

